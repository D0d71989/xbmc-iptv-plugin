<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.iptv.viewer"
       name="IPTV Viewer"
       version="0.0.1"
       provider-name="erop1991@gmail.com">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.repository" name="IPTV Viewer Repository">
		<info compressed="false">http://g.if.ua/xbmc/addons.xml</info>
		<checksum>http://g.if.ua/xbmc/addons.xml.md5</checksum>
		<datadir zip="true">http://g.if.ua/xbmc/addons/</datadir>
	</extension>
  <extension point="xbmc.addon.metadata">
    <summary>IPTV Viewer</summary>
    <description>Просмотр Internet TV из плейлиста без проверки на доступность. Плейлисты могут быть в подкатегории плейлистов iptv или указаны напрямую в настройках</description>
    <platform>all</platform>
  </extension>
</addon>
